<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recipe_details_coordinator_old"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:contextRef="com.alsash.reciper.ui.activity.RecipeDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_recipe_details_appbar_old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_recipe_details_appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_recipe_details_toolbar_layout_old"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="start|top"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMargin="32dp"
            app:expandedTitleMarginBottom="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/activity_recipe_details_toolbar_image_old"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:srcCompat="@drawable/bg_drawer_header"
                tools:ignore="ContentDescription" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_recipe_details_toolbar_old"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleMarginTop="16dp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/activity_recipe_details_tabs_old"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"
                app:tabIndicatorColor="@color/primary"
                app:tabTextAppearance="@style/TextAppearance.Design.Tab" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <com.alsash.reciper.ui.view.SwipeViewPager
        android:id="@+id/activity_recipe_details_pager_old"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:svp_is_swipe_enabled="true" />

    <!--    <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_recipe_detail_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:tint="@color/white"
            app:layout_anchor="@id/activity_recipe_detail_appbar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@drawable/ic_photo" />-->

    <include layout="@layout/activity_recipe_details_bottom_old" />

</android.support.design.widget.CoordinatorLayout>
