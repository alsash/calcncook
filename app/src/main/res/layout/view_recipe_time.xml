<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_description_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_time_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="4dp"
        android:tint="@color/gray_400"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/recipe_time_icon"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/recipe_time_edit"
        style="@style/RippleButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="@color/gray_400"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recipe_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_time_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/recipe_time_icon"
        app:layout_constraintRight_toLeftOf="@+id/recipe_time_edit"
        app:layout_constraintTop_toTopOf="@+id/recipe_time_icon"
        tools:text="1 hour 30 minutes" />

</android.support.constraint.ConstraintLayout>