<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_ingredients_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_ingredient_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recipe_ingredients_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_ingredients_image"
        app:layout_constraintLeft_toRightOf="@+id/recipe_ingredients_image"
        app:layout_constraintTop_toTopOf="@+id/recipe_ingredients_image"
        tools:text="2 Ingredients" />

    <ImageButton
        android:id="@+id/recipe_ingredients_add"
        style="@style/RippleButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tint="@color/gray_400"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_icon"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/recipe_ingredients_horizontal_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="@color/gray_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_ingredients_image" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_ingredients_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_ingredients_horizontal_divider"
        tools:listitem="@layout/item_ingredient" />

</android.support.constraint.ConstraintLayout>