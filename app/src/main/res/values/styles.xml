<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray_400</item>
        <item name="colorAccent">@color/orange_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_app_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="colorControlNormal">@color/white</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="colorControlNormal">@color/black_a054</item>-->
        <item name="colorAccent">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.NavigationView" parent="@style/Widget.Design.NavigationView">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
    </style>

    <style name="TextAppearance.NavigationView" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cs_def_text_primary_check_orange</item>
    </style>

    <style name="RippleButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_gray_solid</item>
    </style>

    <style name="TextAppearance.RecipeTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextAppearance.RecipeTitle.Expanded" parent="@style/TextAppearance.AppCompat.Title.Inverse">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.RecipeTitle.Collapsed">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.RecipeTitle.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>