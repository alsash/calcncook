<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_app_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/black_a054</item>
        <item name="colorAccent">?android:attr/textColorPrimary</item>
    </style>

    <style name="LightIconButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:tint">@color/gray_400</item>
        <item name="android:background">@drawable/bg_light_icon_button</item>
    </style>

    <style name="LightIconView">
        <item name="android:tint">@color/gray_400</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LightIconText">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="LabelButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>