<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alsash.reciper">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.StartActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="alsash.com/recipes"
                    android:pathPrefix="/start"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.RecipeListActivity" />
        <activity
            android:name=".ui.activity.RecipeDetailActivity"
            android:parentActivityName=".ui.activity.RecipeListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alsash.reciper.ui.activity.RecipeListActivity" />
        </activity>
        <activity
            android:name=".ui.activity.RecipeTabActivity"
            android:label="@string/title_activity_recipe_tab"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>