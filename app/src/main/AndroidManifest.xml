<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alsash.reciper">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.StartActivity"
            android:configChanges="orientation|keyboardHidden"
            android:noHistory="true"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <recipeGroup android:name="android.intent.recipeGroup.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <recipeGroup android:name="android.intent.recipeGroup.DEFAULT" />
                <recipeGroup android:name="android.intent.recipeGroup.BROWSABLE" />

                <data
                    android:host="alsash.com/recipes"
                    android:pathPrefix="/start"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.RecipeTabActivity" />
        <activity android:name=".ui.activity.RecipeListActivity" />
        <activity android:name=".ui.activity.RecipeDetailActivity" />
    </application>

</manifest>